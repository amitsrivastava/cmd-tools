# gfa - git fetch ALL
#
# Fetch all configured remotes for given git repository
for remote in `git remote`; do
  echo "git fetch $remote..."
  git fetch $remote 

  if [[ $? -eq 0 ]]; then
    echo "git fetch $remote: SUCCESS"
  else
    echo "git fetch $remote: FAILURE"
  fi
done
